<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="6dp"
    style="@style/AppTheme"
    android:id="@+id/disconnectNoticeCard">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="Authorize App Connection"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:text="This app requires a connection to the Holochain Service app:"
        />

        <TextView
            android:id="@+id/installedAppId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:text="forum"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/installedAppId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:text='To approve this connection, open the system notification "App Authorization Request", and choose "Approve".' />

        <TextView
            android:id="@+id/installedAppId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:paddingTop="18dp"
            android:text="Once the connection has been approved, you must restart the app." />

        <Button
            android:id="@+id/restartAction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Restart"
        />
    </LinearLayout>
</androidx.cardview.widget.CardView>